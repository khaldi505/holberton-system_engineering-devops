B#!/usr/bin/env bash
# script that transfers a file from our client to a server using scp :)
if [ $# -lt 3 ]
then
	echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"

else
	file=$1
	server_ip=$2
	username=$3
	ssh_pkey=$4
	scp -o StrictHostKeyChecking=no -i "$ssh_pkey" "$file" "$username"'@'"$server_ip":~/

fi
